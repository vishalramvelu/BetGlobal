# Database Configuration
DATABASE_URL=sqlite:///bets.db

# Session Configuration
SESSION_SECRET=your-secret-key-here

# Flask-Security-Too Configuration
SECURITY_PASSWORD_SALT=your-super-secret-salt-here

# Email Configuration for Flask-Security-Too
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@playstakes.com

# For development, you can use a console mail backend
# MAIL_SERVER=localhost
